{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
    // "baseUrl": ".",
    // "paths": {
    //   "@src/*": ["./src/*"],
    //   "@pages/*": ["./src/pages/*"],
    //   "@assets/*": ["./src/assets/*"],
    //   "@hooks/*": ["./src/hooks/*"],
    //   "@routes/*": ["./src/routes/*"],
    //   "@utils/*": ["./src/utils/*"],
    // }
  },
  "include": [
    "src",
    "@types"
  ],
  "files": [
    "src/styles/styled.d.ts"
  ]
}
